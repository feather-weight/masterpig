{
  auto_https off
  servers {
    protocols h1 h2
  }
}

:80 {
  encode zstd gzip
  root * /srv/www
  file_server

  # Proxy API to the app container (prefix /api)
  handle_path /api/* {
    uri strip_prefix /api
    reverse_proxy app:3000
  }

  # Health passthrough (optional)
  @health path /health
  handle @health {
    reverse_proxy app:3000
  }
}
